<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnusercom"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:background="@drawable/userphoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tvusercomtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnusercom"
        android:layout_alignLeft="@+id/tvusercomname"
        android:text="2016.11.16 16：16：16" />

    <TextView
        android:id="@+id/tvusercom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnusercom"
        android:layout_below="@+id/btnusercom"
        android:layout_marginTop="20dp"
        android:text="这本书很不错。值得一看。" />

    <TextView
        android:id="@+id/tvusercomname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnusercom"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/btnusercom"
        android:gravity="center_vertical"
        android:textSize="30px" 
        android:text="叶无道"/>

</RelativeLayout>
